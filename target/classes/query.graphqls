schema {
   query: Query
}

type Usuario {
  id: ID!
  nome: String!
  cpf: String!
}

type Query {
  buscarUsuarioPeloId(id: Long!) : Usuario
  listarTodosUsuarios: [Usuario]
}

type Mutation {
    novoUsuario(nome: String!, cpf: String!) : Usuario
    alterarUsuario(id: Int!, nome: String, cpf: String): Usuario
    apagarUsuario(id: Int!): Usuario
}

type Subscription{
	usuarios: Usuario!
}